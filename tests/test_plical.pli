  TPLICAL: PROC OPTIONS(MAIN) REORDER;
    DCL (MAXCALL,DEPTH)   BIN FIXED(31) INIT(0);
    DCL (NTOP,NCALL)      BIN FIXED(31) INIT(0);
 
    DCL SIMPROC ENTRY(BIN FIXED(31));
  
    GET EDIT(MAXCALL,DEPTH) (F(10),F(10));

    DO WHILE(NCALL < MAXCALL);
      NTOP = NTOP + 1;
      CALL SIMPROC(DEPTH);
    END;

    PUT SKIP EDIT('TPLICAL maxcall=',MAXCALL, '  depth=',DEPTH,
                  '  ntop=',NTOP, '  ncall=',NCALL) (4(A,F(10)));
 
    /* procedure SIMPROC -------------------------------------------*/
    SIMPROC: PROC(D);
      DCL (D)  BIN FIXED(31);
      NCALL = NCALL + 1;
    END SIMPROC;
 
  END TPLICAL;
  